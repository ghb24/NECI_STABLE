[main]
fc = ftn
compiler = PGI-pgf95-on-LINUX
cc = CC
ccd = g++
cpp = cpp -C -traditional
cppflags =  -D__Linux -DPOINTER8 -DPARALLEL -DHAVE_SSE2 -D__INT64 -D__PGI -D__SHARED_MEM
ld = ftn
libs =  -pgcpplibs -lrt -lm
module_flag = -module

[dbg]
fflags = -g
cflags = -m64 -g -C
f90flags = -Mfree -Mbounds

[opt]
